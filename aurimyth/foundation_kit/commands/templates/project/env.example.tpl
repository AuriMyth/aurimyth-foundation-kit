# =============================================================================
# {project_name} 环境变量配置
# =============================================================================
# 复制此文件为 .env 并根据实际情况修改

# -----------------------------------------------------------------------------
# 服务配置
# -----------------------------------------------------------------------------
SERVICE_NAME={project_name_snake}
SERVICE_TYPE=api

# -----------------------------------------------------------------------------
# 服务器配置
# -----------------------------------------------------------------------------
SERVER_HOST=127.0.0.1
SERVER_PORT=8000
SERVER_WORKERS=1
SERVER_RELOAD=true

# -----------------------------------------------------------------------------
# 数据库配置
# -----------------------------------------------------------------------------
DATABASE_URL=sqlite+aiosqlite:///./dev.db
DATABASE_POOL_SIZE=5
DATABASE_ECHO=false

# PostgreSQL: DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/{project_name_snake}
# MySQL: DATABASE_URL=mysql+aiomysql://root:password@localhost:3306/{project_name_snake}

# -----------------------------------------------------------------------------
# 缓存配置
# -----------------------------------------------------------------------------
CACHE_TYPE=memory
# CACHE_TYPE=redis
# CACHE_REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# 任务队列配置
# -----------------------------------------------------------------------------
TASK_ENABLED=false
# TASK_BROKER_URL=redis://localhost:6379/1

# -----------------------------------------------------------------------------
# 调度器配置（内嵌在 API 服务中）
# -----------------------------------------------------------------------------
SCHEDULER_ENABLED=true  # 默认启用，设为 false 可禁用

# -----------------------------------------------------------------------------
# 日志配置
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_DIR=logs

# -----------------------------------------------------------------------------
# 迁移配置
# -----------------------------------------------------------------------------
MIGRATION_SCRIPT_LOCATION=migrations

# -----------------------------------------------------------------------------
# 调试配置
# -----------------------------------------------------------------------------
DEBUG=true
